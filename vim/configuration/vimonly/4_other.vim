" allow openning new file without saving previous
set hidden

" aut read files if modified outside
set autoread

" mouse support
set mouse=a

" split window to the right and below by default
set splitright splitbelow

" console settings
set lazyredraw
set ttyfast

" indent settings
set smartindent

" no spell checker
set nospell

" no show match
set noshowmatch
